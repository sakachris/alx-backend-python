#!/bin/bash

# kurbeScript - Local Kubernetes Cluster Setup Script

echo "ğŸš€ Starting Kubernetes setup using Minikube..."

# Step 1: Check if Minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed. Please install it before running this script."
    echo "ğŸ‘‰ Install guide: https://minikube.sigs.k8s.io/docs/start/"
    exit 1
fi

# Step 2: Start Minikube
echo "ğŸ”„ Starting Minikube..."
minikube start

# Step 3: Verify that Kubernetes cluster is running
echo "ğŸ” Verifying Kubernetes cluster status..."
# kubectl cluster-info
minikube kubectl -- cluster-info

if [ $? -ne 0 ]; then
    echo "âŒ Failed to retrieve cluster info. Make sure kubectl is installed and configured."
    exit 1
fi

# Step 4: Retrieve available Pods in all namespaces
echo "ğŸ“¦ Fetching list of Pods..."
# kubectl get pods --all-namespaces
minikube kubectl -- get pods -A

echo "âœ… Kubernetes cluster is up and running locally!"
